    <TextHeader
      title={`BIENVENIDO, ${userName.toUpperCase()}`}
      subtitle="DITTA CONSULTING"
    />

    <div class="grid grid-cols-1 gap-8">
      <RequestSection
        title="SOLICITUDES POR COTIZAR"
        requests={requests}
