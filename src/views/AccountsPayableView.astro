const requests = duplicateJson(getuserrequests, 4);

// ACA HAY QUE PONER DOS FETCH, UNO PARA SOLICITUDES POR COTIZAR Y OTRO PARA SOLICITUDES POR COMPROBAR

const { userName } = Astro.props;
---

<div>
