import WelcomeHeader from "@components/WelcomeHeader.astro";

type Request = {
  nombre: string;
  puesto: string;
  solicitud: string;
  fecha: string;
  estado: string;
};

const { headerData, requests } = Astro.props;
---

<div class="flex flex-col p-12 bg-white h-full">
  <main>
    <WelcomeHeader userName={headerData.userName} />

    <section class="bg-white p-6 rounded-lg shadow w-full">
      <h2 class="flex text-xl font-bold mb-4">
        SOLICITUDES POR AUTORIZAR
        <span class="px-2 align-middle text-primary-500"><!--({requests.length})--></span> 
      </h2>

      {requests.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {requests.slice(0, 4).map((request: Request) => (
            <div class="bg-white border border-neutral-200 rounded-2xl p-6 shadow-md transition hover:shadow-lg hover:border-primary-300">
              <div class="flex justify-between items-start mb-4">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-full bg-purple-100 text-purple-700 flex items-center justify-center text-xl">
                    üë§
                  </div>
                  <div>
                    <p class="text-lg font-semibold text-neutral-800">{request.nombre}</p>
                    <p class="text-sm text-neutral-500">{request.puesto}</p>
                  </div>
                </div>
                <a 
                  href={`/detalle/${request.solicitud}`} 
                  class="text-neutral-400 hover:text-neutral-700 text-2xl"
                  title="Ver detalles"
                >
                  ‚ãÆ
                </a>
              </div>

              <div class="grid grid-cols-2 gap-4 text-sm text-neutral-700">
                <div class="space-y-1">
                  <p>
                    <span class="font-medium text-neutral-500">Pendiente desde:</span> {request.fecha}
                  </p>
                  <p class="text-xs text-neutral-500">
                    Esta solicitud est√° esperando revisi√≥n.
                  </p>
                </div>
                <div class="flex flex-col items-end justify-between text-right">
                  <p class="text-sm">
                    <span class="font-medium text-neutral-500">Solicitud:</span> <strong>#{request.solicitud}</strong>
                  </p>
                  <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full mt-1
                    ${request.estado === 'Urgente' ? 'bg-red-100 text-red-700' :
                      request.estado === 'Normal' ? 'bg-yellow-100 text-yellow-700' :
                      'bg-gray-100 text-gray-600'}`}>
                    {request.estado}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="bg-gray-100 p-6 rounded-lg shadow w-full text-center text-gray-500 font-semibold">
          NO HAY SOLICITUDES POR APROBAR
        </div>
      )}
    </section>
  </main>
</div>
