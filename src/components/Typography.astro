---
/**
 * Author: Michael Devlyn 
 * Typography Component
 * 
 * Usage:
 * <Typography variant="header" size="default">Your Header Text</Typography>
 * <Typography variant="subHeader">Your Subheader Text</Typography>
 * <Typography variant="paragraph" size="small">Your paragraph text</Typography>
 * 
 * Variants: "header", "subHeader", "paragraph"
 * Sizes: "default", "small" (optional, defaults to "default")
 */

 //Define las propiedades (Props) que el componente puede recibir 
export interface Props {
  variant: 'header' | 'subHeader' | 'paragraph';
  size?: 'default' | 'small';
  class?: string;
}

//Takes the incoming properties of astro 
const { variant, size = 'default', class: className = '' } = Astro.props;

//Determine the font of the component
let classes = 'font-roboto ';

// Base styles for each variant
if (variant === 'header') {
  classes += 'font-bold text-primary ';
  classes += size === 'default' ? 'text-3xl md:text-4xl' : 'text-2xl md:text-3xl';
} else if (variant === 'subHeader') {
  classes += 'font-medium text-primary ';
  classes += size === 'default' ? 'text-xl md:text-2xl' : 'text-lg md:text-xl';
} else if (variant === 'paragraph') {
  classes += 'font-normal text-gray-800 ';
  classes += size === 'default' ? 'text-base' : 'text-sm';
}

// Add custom classes if provided
if (className) {
  classes += ' ' + className;
}
---

<div class={classes}>
  <slot />
</div>