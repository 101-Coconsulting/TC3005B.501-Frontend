---
/**
 * Author: Julia Maria Stephanie Duenkelsbuehler Castillo
 * 
 * Description: This component is a header for our system.
 * 
 * Example usage:
 * 	<PageHeader
 *    userName="John Doe"
 *	  userAvatar="/path/to/avatar.jpg"
 *		showButtonLabel="Admin"
 *  />
 */

const { userName, userAvatar, showButtonLabel } = Astro.props;
---

<!-- Material Icons -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,1,0" />

<header class="flex justify-between items-center p-4 bg-primary-300">
  <!-- Left Section -->
  <div class="flex items-center">
    <button
      class="bg-neutral-300 text-black font-bold py-2 px-8 ml-6 rounded text-base transition-colors duration-200 hover:bg-primary-50"
      onclick="alert('Toggle sidebar here!')"
    >
      LOGO
    </button>
  </div>

  <!-- Right Section -->
  <div class="flex items-center gap-3">
    <!-- User Role -->
    <div class="bg-neutral-300 text-black font-bold rounded-full py-1.5 px-4 text-sm">
      {showButtonLabel}
    </div>

    <!-- Icons -->
    <button
      class="bg-primary-300 rounded-lg p-2.5 h-10 w-10 flex justify-center items-center cursor-pointer transition-colors duration-200 hover:bg-primary-50"
      aria-label="Sensor Door"
    >
      <span class="material-symbols-outlined text-white text-[24px] font-[400]">
        sensor_door
      </span>
    </button>

    <button
      class="bg-primary-300 rounded-lg p-2.5 h-10 w-10 flex justify-center items-center cursor-pointer transition-colors duration-200 hover:bg-primary-50"
      aria-label="Wind Power"
    >
      <span class="material-symbols-outlined text-white text-[24px] font-[400]">
        wind_power
      </span>
    </button>

    <!-- User Info -->
    <div class="flex items-center gap-2">
      <div class="bg-black text-white py-1.5 px-4 rounded-full font-bold text-sm">
        {userName}
      </div>
      <button
        class="rounded-full overflow-hidden w-11 h-11 cursor-pointer transition-all duration-200 hover:outline-2 hover:outline-primary-300 hover:shadow-primary-500"
        onclick="alert('Profile clicked!')"
      >
        <img 
          src={userAvatar} 
          alt="Profile" 
          class="w-full h-full object-cover" 
          width="45"
          height="45"
        />
      </button>
    </div>
  </div>
</header>