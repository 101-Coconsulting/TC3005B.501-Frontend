---
const { userName, userAvatar, showButtonLabel } = Astro.props;
---

<!-- Material Icons -->
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
/>
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,1,0&icon_names=sensor_door,wind_power"
/>

<header class="header">
  <div class="left">
    <!-- Clickable Logo -->
    <button class="logo-button" onclick="alert('Toggle sidebar here!')">
      LOGO
    </button>
  </div>

  <div class="right">
    <!-- User Role Label -->
    <div class="user-type-label">{showButtonLabel}</div>

    <!-- Sensor Door Icon Button -->
    <button class="icon-button" aria-label="Sensor Door">
      <span class="material-symbols-outlined">sensor_door</span>
    </button>

    <!-- Wind Power Icon Button -->
    <button class="icon-button" aria-label="Wind Power">
      <span class="material-symbols-outlined">wind_power</span>
    </button>

    <!-- User Info -->
    <div class="user">
      <div class="user-label">{userName}</div>
      <button class="avatar-button" onclick="alert('Profile clicked!')">
        <img src={userAvatar} alt="Profile" />
      </button>
    </div>
  </div>
</header>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined");

  .header {
    background-color: #4ea1f3;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }

  .left {
    display: flex;
    align-items: center;
  }

  .logo-button {
    background-color: #ccc;
    color: #4ea1f3;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.2s ease;
  }

  .logo-button:hover {
    background-color: #6aff7a;
  }

  .right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .user-type-label {
    background-color: #e5e5e5;
    color: black;
    font-weight: bold;
    border-radius: 999px;
    padding: 0.4rem 1rem;
    font-size: 0.875rem;
  }

  .icon-button {
    background-color: #4ea1f3;
    border: none;
    border-radius: 8px;
    padding: 10px;
    height: 40px;
    width: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .icon-button:hover {
    background-color: #6aff7a;
  }

  .material-symbols-outlined {
    font-variation-settings:
      'FILL' 1,
      'wght' 400,
      'GRAD' 0,
      'opsz' 24;
    font-size: 24px;
    color: white;
  }

  .user {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .user-label {
    background-color: black;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    font-weight: bold;
    font-size: 0.875rem;
  }

  .avatar-button {
    border: none;
    background: none;
    padding: 0;
    border-radius: 50%;
    overflow: hidden;
    width: 45px;
    height: 45px;
    cursor: pointer;
    transition: outline 0.2s ease, box-shadow 0.2s ease;
  }

  .avatar-button img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }

  .avatar-button:hover {
    outline: 2px solid #6aff7a;
    box-shadow: 0 0 5px #6aff7a;
  }
</style>
