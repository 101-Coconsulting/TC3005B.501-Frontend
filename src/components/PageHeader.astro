---
/**
 * Author: Julia Maria Stephanie Duenkelsbuehler Castillo
 * 
 * Description: This component is a header for our system.
 * 
 * Example usage:
 * 	<PageHeader
 *    userName="John Doe"
 *		buttonLabel="Admin"
 *  />
 */

const { userName, buttonLabel } = Astro.props;
import LogoutButton from "@components/Logout.tsx";
import MaterialIcon from "@components/MaterialIcon.astro";

const isCurrentRoute = Astro.url.pathname === "/perfil-usuario";
---

<header class="flex justify-between items-center bg-primary-300 px-3 sm:px-4 py-2 h-[84px]">
  <!-- Left Section -->
  <div class="flex items-center">
    <button
      id="sidebar-toggle"
      class="md:hidden mr-2 p-2 rounded"
    >
      <MaterialIcon icon="menu" />
    </button>
    <img
      src="/Logo.svg"
      class="w-16 h-16 sm:w-18 sm:h-18 rounded drop-shadow-lg"
      onclick="alert('Welcome to 101-Coconsulting!')"
    />
  </div>

  <!-- Right Section -->
  <div class="flex items-center gap-2 sm:gap-4">
    <!-- User Role -->
    <div class="bg-neutral-300 text-black font-bold rounded-full py-1 px-2 sm:px-3 text-xs whitespace-nowrap">
      {buttonLabel}
    </div>
    
    <!-- User Info -->
    <div class="flex items-center gap-2">
      <div class="bg-black text-white py-1 px-2 sm:px-3 rounded-full font-bold text-xs truncate max-w-[80px] sm:max-w-[120px]">
        {userName}
      </div>
      
      <div class="flex items-center">
        <button
          class="bg-primary-300 rounded-lg p-1 h-7 w-7 sm:h-8 sm:w-8 flex justify-center items-center cursor-pointer hover:bg-primary-50 mr-1"
        >
          <MaterialIcon icon="dark_mode" />
        </button>
        
        <LogoutButton client:load>
          <MaterialIcon icon="logout" />
        </LogoutButton>
        
        <a href="/perfil-usuario" class={isCurrentRoute ? "pointer-events-none ml-1" : "ml-1"}>
          <button
            class="flex items-center bg-white justify-center rounded-full overflow-hidden h-7 w-7 sm:h-8 sm:w-8 cursor-pointer hover:outline-2 hover:outline-primary-300"
          >
            <MaterialIcon icon="person" color="black" />
          </button>
        </a>
      </div>
    </div>    
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('sidebar-toggle');
    if (toggleButton) {
      toggleButton.addEventListener('click', () => {
        const sidebar = document.getElementById('sidebar');
        if (sidebar) {
          if (sidebar.style.display === 'block') {
            sidebar.style.display = '';
            sidebar.style.position = '';
            sidebar.style.zIndex = '';
            sidebar.style.top = '';
            sidebar.style.left = '';
            sidebar.style.height = '';
          } else {
            sidebar.style.display = 'block';
            sidebar.style.position = 'absolute';
            sidebar.style.zIndex = '50';
            sidebar.style.top = '84px';
            sidebar.style.left = '0';
            sidebar.style.width = '250px';
            sidebar.style.height = 'calc(100vh - 84px)';
          }
        }
      });
    }
  });
</script>