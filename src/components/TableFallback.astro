---
// src/components/FallBack.astro

interface Props {
  title?: string;
  message?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "¡Oops, no hay datos!",
  message = "Actualmente no hay información disponible para mostrar.",
  buttonText = "Regresar",
  buttonLink = "/", // Ruta por defecto a la página principal
} = Astro.props;
---

<div class="flex-grow flex items-center justify-center w-full">
  <div class="bg-white rounded-md shadow-md p-8 text-center">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">{title}</h1>
    <p class="text-gray-600 mb-6">{message}</p>
    <a
      href={buttonLink}
      class="bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded-md shadow-sm transition duration-300 ease-in-out"
    >
      {buttonText}
    </a>
  </div>
</div>
